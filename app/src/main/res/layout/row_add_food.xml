<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/name_checkedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:checkMark="?android:attr/textCheckMark"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brand_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_checkedTextView"
        android:layout_alignStart="@+id/name_checkedTextView"
        android:layout_below="@+id/name_checkedTextView"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brand_textView"
        android:layout_alignStart="@+id/brand_textView"
        android:layout_below="@+id/brand_textView"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cal_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cal_value"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/cal_value"
        android:layout_toRightOf="@+id/cal_value"
        android:text="@string/calorie_text"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>